<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaApresentacaoTestePerfil">


    <Button
        android:id="@+id/button"
        android:layout_width="192dp"
        android:layout_height="80dp"
        android:layout_marginBottom="120dp"
        android:text="Comerçar"
        android:background="@drawable/arredondar_botao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/framePrincipal"
        android:layout_width="0dp"
        android:layout_height="408dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="313dp"
            android:layout_height="164dp"
            android:layout_gravity="center"
            android:text="Em cada uma das 25 questões a seguir, escolha a alternativa que mais se encaixa com você"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>