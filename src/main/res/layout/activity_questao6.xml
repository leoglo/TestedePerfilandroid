<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questao2">
    <FrameLayout
        android:id="@+id/frameQuestao1"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="221dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:text="6.  Eu penso que..."
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </FrameLayout>

    <Button
        android:id="@+id/btn_I"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/arredondar_botao"
        android:text="É bom ser manso, mas andar
com um porrete"
        app:layout_constraintBottom_toTopOf="@+id/btn_C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameQuestao1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_O"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/arredondar_botao"
        android:text="Um homem prevenido vale por
dois"
        app:layout_constraintBottom_toTopOf="@+id/btn_A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_A"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@drawable/arredondar_botao"
        android:text="O ataque é melhor que a defesa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_C"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/arredondar_botao"
        android:text="Unidos venceremos, divididos
perderemos"
        app:layout_constraintBottom_toTopOf="@+id/btn_O"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>