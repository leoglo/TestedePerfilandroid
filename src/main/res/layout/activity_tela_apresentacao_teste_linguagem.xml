<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaApresentacaoTesteLiguagem">


    <Button
        android:id="@+id/button"
        android:layout_width="192dp"
        android:layout_height="80dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/arredondar_botao"
        android:text="Comerçar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/framePrincipal"
        android:layout_width="0dp"
        android:layout_height="408dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:layout_width="356dp"
            android:layout_height="305dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Avalie cada frase, de acordo com o que poderia fazer você se sentir mais
apreciado e amado pelo seu colega. O número 5 representa o que você mais apreciaria, o número 1 representa o
que você menos apreciaria em cada grupo. Nenhum grupo individual pode ter o mesmo número repetido duas
vezes."
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>